{% extends 'base.html.twig' %}

{% block main %}
    {% if app.user %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" method="POST">
                <fieldset>
                    <legend>Edit Post</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Post Title:</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_title" placeholder="Post Title"
                                   name="article[title]" value="{{ article.title }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_picture">Picture URL:</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_picture" placeholder="Post Picture"
                                   name="article[picture]" value="{{ article.picture }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_content">Content:</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="article_content"
                                  name="article[content]">{{ article.summary }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% else %}

<div class="container body-content span=8 offset=2">
    <div class="well">
        <h2 style="text-align: center; color: red;font-weight: bold;">You can't edit article because you aren't login!</h2>
        <h2 style="text-align: center; color: red;font-weight: bold;">Please Login first!</h2>
    </div>
    <footer>
        <div class="pull-right">
            <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">&laquo; Back</a>
        </div>
    </footer>
</div>

    {% endif %}

{% endblock %}

