{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <img src="{{ article.picture }}" align="left" width="300px" height="169px" alt="" style="margin: 20px 20px 0 0;"></src>

                        <p style="text-indent: 2em; margin: 20px 0px 5px 0; text-align:justify;">
                            {{ article.summary }}
                        </p>

                        <small class="author">
                            {{ article.author }}
                        </small>
                        <div class="vc_empty_space" style="height: 10px"><span class="vc_empty_space_inner"></span></div>
                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('article_details',{'id':article.id}) }}">Read more &raquo;</a>

                            </div>

                            <div class="pull-left" style="margin: 0 5px 0 0">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('article_edit',{'id':article.id}) }}">Edit</a>
                            </div>

                            <div class="pull-left">
                                <a class="btn btn-danger btn-xs"
                                   href="{{ path('article_delete',{'id':article.id}) }}">Delete</a>

                            </div>

                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
