<div class="container body-content">
    <div class="row">
        <h2>Articles written by: <span style="font-weight: bold;">{{user.fullName}}</span></h2> 
        {{#each articles}}
            <div class="col-md-6">
                <article>   
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>
                    <small class="author">
                    By: {{this.User.fullName}}
                    </small>

                    

                    <img src="{{this.pictureUrl}}" align="left" width="300px" height="169px" alt="" style="margin: 20px 20px 0 0;"/>
                    


                    <p style="text-indent: 2em; margin: 20px 0px 5px 0; text-align:justify;">
                        
                        {{this.content}}...
                            
                    </p>

                    <small class="author">        
                        {{this.date}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/" style="margin: 0px 0px 15px 0">&laquo; Back</a>
                            <a class="btn btn-default btn-xs" href="/article/userArticlesDetails/{{this.id}}" style="margin: 0px 0px 15px 0">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}   
    </div>
</div>
                